extends layout

block menu
block content
    div#wrapper
        #content.regalos-disponibles
            div.row
                div.col.s12
                    h1.header.grey-text.text-darken-3.center Seleccion치 tu regalo
            div.row
                div.col.s12
                    form
                        div.row
                            div.col.s12.m6.l4
                                select#filterByPrice
                                    option(value="", disabled="", selected="") Elegir rango de precios
                                    option(value="_100_500") $100 - $500
                                    option(value="_500_1000") $500 - $1000
                                    option(value="_1000_3000") $1000 - $3000
                                    option(value="_3000_1500") $3000 - $15000
                                    option(value="_15000_") m치s de $15000
                                    option(value="all") ver todos
            div.row
                div#present-content.col.s12
                div#present-card.hide
                    div.col.s12.m6.l4
                        div.card.medium
                            div.card-image.waves-effect.waves-block.waves-light
                                img(src=":image").activator
                            div.card-content
                                span.card-title.activator.grey-text.text-darken-4 :name - $:price
                                    i.material-icons.right more_vert
                                p
                                    a(href="#modalId").confirm.orange-text REGALAR!
                            div.card-reveal
                                span.card-title.grey-text.text-darken-4 :name - $:price
                                    i.material-icons.right close
                                p :description
                                p
                                    a(href="#modalId").confirm.btn.orange.white-text
                                        i.material-icons shopping_cart

                            div#modalId.modal.white
                                div.modal-content
                                    h4.indigo-text.text-lighten-4 Est치s por hacer tu regalo...
                                    form
                                        div.row
                                            div.input-field.col.s12
                                                textarea(name="message")#message.validate.materialize-textarea
                                                label(for="message") Dej치le un mensaje a Flor y a Lenny!
                                        div.row
                                            div.input-field.col.s12
                                                input(name="fromName", type="text", required="")#fromName.validate
                                                label(for="fromName") De parte de:
                                        div.row
                                            div.input-field.col.s12
                                                a(href="", target="_blank", buyPresent="", data-id=":id", data-url=':url', data-index=":index", data-transactionId=":transactionId").btn.orange.white-text
                                                    i.material-icons shopping_cart
                                                a(href="#!").right.modal-action.modal-close.waves-effect.waves-amber.btn-flat.indigo.lighten-5 Cancelar

block toolbar

block scripts
    script(src="/js/availablePresents.js")